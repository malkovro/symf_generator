<div class="modal fade" id="deletion_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modal_title | default('Suppression des lignes')}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ modal_content | default('Confirmez-vous la suppression de toutes les lignes ?') }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="deletion_confirmed">{{ action_confirm|default('Oui') }}</button>
                <button type="button" class="btn" data-dismiss="modal">{{ action_cancel  |default('Non')}}</button>
            </div>
        </div>
    </div>
</div>